[Desktop Entry]
Version=1.0
Type=Application
Name=DotX
GenericName=Dot Plot Visualizer
Comment=Extreme-scale dot plot visualization for bioinformatics
Keywords=bioinformatics;genomics;visualization;alignment;dotplot;science;
Exec=/opt/dotx/bin/dotx-gui %F
Icon=dotx
Terminal=false
StartupNotify=true
StartupWMClass=dotx-gui
Categories=Science;Biology;Education;Graphics;
MimeType=application/x-dotx;
Actions=NewProject;QuickCompare;

[Desktop Action NewProject]
Name=New Project
Exec=/opt/dotx/bin/dotx-gui --new-project

[Desktop Action QuickCompare]
Name=Quick Compare
Exec=/opt/dotx/bin/dotx-gui --quick-compare